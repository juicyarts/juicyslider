include header.jade
body
	a(href="https://github.com/juicyarts/juicyslider/")
		img(style="position: absolute; top: 0; right: 0; border: 0; z-index: 5000", src="https://camo.githubusercontent.com/52760788cde945287fbb584134c4cbc2bc36f904/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f77686974655f6666666666662e706e67", alt="Fork me on GitHub", data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_white_ffffff.png")
	#pagewrapper
		.claim
			h1(class="text-bold") JuicySlider.js Carousel
			article(class="text-thin").
				JuicySlider.js is a small vanillaJS plugin to let you build simple slider containers*
			small(class="text-thin").
				* This plugin is in development and may have some bugs
			.badges
				img(src="https://codeship.com/projects/e889fb70-d867-0132-c7b9-56577b4e3777/status?branch=develop")
				img(src="https://travis-ci.org/juicyarts/juicyslider.svg?branch=develop", alt="")
				a(href='https://coveralls.io/r/juicyarts/juicyslider?branch=develop')
					img(src='https://coveralls.io/repos/juicyarts/juicyslider/badge.svg?branch=develop' alt='Coverage Status')
				a(href="https://bitdeli.com/free" title="Bitdeli Badge")
					img(src="https://camo.githubusercontent.com/fc54d8b7a898bf4ff6f6c56c34a0f2e8ab91a0cd/68747470733a2f2f64327765637a68766c38323376302e636c6f756466726f6e742e6e65742f6a75696379617274732f6a75696379736c696465722f7472656e642e706e67" alt="Bitdeli Badge" data-canonical-src="https://d2weczhvl823v0.cloudfront.net/juicyarts/juicyslider/trend.png" style="max-width:100%;")
		
		#controlHint
			.controls(title="use arrow keys to navigate slider types")
				i(class="fa fa-arrow-circle-o-left")
				i(class="fa fa-arrow-circle-o-right")
				span use your arrow keys to navigate thorugh the slider types
		#contentwrapper
			#AppleSlider(class="sliderContainer")
				#ApplePrev(class="jArrowPrev")
				.jSlideWrapper
					ul
						li
							pre
								span javascript 
								code(class="javascript code").
									var options = {
									 elName: 'slider1Container',
									 direction: 'horizontal',
									 type: 'basic',
									 carousel: false,
									 replay: false,
									 visEl: 1,
									 offset: 0,
									 keyCtrl: true,
									 autoscroll: {
									  on: true,
									  interval: 5000
									 }
									};
									var slider1 = new JuicySlider(options).init();
						li 
							pre(rel="HTML")
								span html
								code(class="xml code").
									&lt;div id="containerName"&gt;
									 &lt;div class="jArrowPrev"&gt;&lt;/div&gt;
									 &lt;div class="jSlideWrapper"&gt;
									  &lt;ul&gt;
									   &lt;li&gt;&lt;/li&gt;
									   &lt;li&gt;&lt;/li&gt;
									   &lt;li&gt;&lt;/li&gt;
									  &lt;/ul&gt;
									 &lt;/div&gt;
									 &lt;div class="jArrowNext"&gt;&lt;/div&gt;
									&lt;/div&gt;
				#AppleNext(class="jArrowNext")
						
	include carouselscript.jade